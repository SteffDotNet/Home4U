<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="LoginContainer" parent="AppTheme">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginTop">@dimen/indent_normal</item>
        <item name="android:layout_marginLeft">@dimen/indent_medium</item>
        <item name="android:layout_marginRight">@dimen/indent_medium</item>
    </style>

    <style name="RegistrationContainer" parent="AppTheme">
        <item name="android:layout_marginTop">@dimen/indent_normal</item>
        <item name="android:layout_marginBottom">@dimen/indent_medium</item>
        <item name="android:layout_marginLeft">@dimen/indent_medium</item>
        <item name="android:layout_marginRight">@dimen/indent_medium</item>
    </style>

    <style name="TextError">
        <item name="android:textColor">@color/text.error</item>
        <item name="android:textSize">@dimen/textSize_small</item>
        <item name="android:layout_marginRight">@dimen/indent_small</item>
        <item name="android:layout_marginLeft">@dimen/indent_small</item>
    </style>
</resources>
