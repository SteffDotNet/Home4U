<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/text.primary</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="LoginContainer" parent="AppTheme">
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">@dimen/indent_xxlarge</item>
        <item name="android:layout_marginRight">@dimen/indent_xxlarge</item>
    </style>

    <style name="RegistrationContainer" parent="AppTheme">
        <item name="android:layout_marginTop">@dimen/indent_normal</item>
        <item name="android:layout_marginBottom">@dimen/indent_medium</item>
        <item name="android:layout_marginLeft">@dimen/indent_xxlarge</item>
        <item name="android:layout_marginRight">@dimen/indent_xxlarge</item>
    </style>

    <style name="AddContainer" parent="AppTheme">
        <item name="android:layout_marginTop">@dimen/indent_normal</item>
        <item name="android:layout_marginBottom">@dimen/indent_large</item>
        <item name="android:layout_marginLeft">@dimen/indent_xxlarge</item>
        <item name="android:layout_marginRight">@dimen/indent_xxlarge</item>
    </style>

    <style name="SettingsBlock" parent="AppTheme">
        <item name="android:layout_marginTop">@dimen/indent_small</item>
        <item name="android:layout_marginBottom">@dimen/indent_normal</item>
        <item name="android:layout_marginLeft">@dimen/indent_medium</item>
        <item name="android:layout_marginRight">@dimen/indent_medium</item>
    </style>

    <style name="DialogContainer">
        <item name="android:paddingTop">@dimen/indent_large</item>
        <item name="android:paddingBottom">@dimen/indent_large</item>
        <item name="android:paddingRight">@dimen/indent_normal</item>
        <item name="android:paddingLeft">@dimen/indent_normal</item>
    </style>

    <style name="AddButtonContainerView">
        <item name="android:background">@color/add.data</item>
        <item name="android:layout_marginTop">@dimen/indent_medium</item>
        <item name="android:layout_marginBottom">@dimen/indent_normal</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextError">
        <item name="android:textColor">@color/text.error</item>
        <item name="android:textSize">@dimen/textSize_small</item>
        <item name="android:layout_marginRight">@dimen/indent_small</item>
        <item name="android:layout_marginLeft">@dimen/indent_small</item>
    </style>

    <style name="AuthEditText">
        <item name="android:textSize">@dimen/textSize_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/text.white</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="DialogText">
        <item name="android:textColor">@color/text.dialog</item>
        <item name="android:textSize">@dimen/textSize_medium</item>
        <item name="android:layout_marginRight">@dimen/indent_large</item>
    </style>

    <style name="TextLayoutInput" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text.white</item>
        <item name="android:textSize">@dimen/textSize_normal</item>
    </style>

</resources>
