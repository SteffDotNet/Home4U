<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        style="@style/MainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/indent_small"
            app:contentPadding="@dimen/indent_normal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/indent_small"
                    android:textColor="@color/text.primary"
                    android:textSize="@dimen/indent_medium"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/main.devices"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/deviceRecycleView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/indent_large"
            app:cardCornerRadius="@dimen/indent_small"
            app:contentPadding="@dimen/indent_normal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/indent_small"
                    android:textColor="@color/text.primary"
                    android:textSize="@dimen/indent_medium"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/main.rooms"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/roomRecycleView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>
</RelativeLayout>
