<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@id/registerButton">

    <LinearLayout
        style="@style/RegistrationContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/indent_small">

          <EditText
              android:id="@+id/emailEditText"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="@dimen/textSize_medium"
              android:inputType="textEmailAddress"
              android:hint="@string/auth.email"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/indent_medium"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="*"/>

      </RelativeLayout>

      <TextView
          android:id="@+id/errorEmailTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/TextError"
          android:text="@string/error.incorrect_email"
          android:visibility="gone"/>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/indent_small">

          <EditText
              android:id="@+id/loginEditText"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="@dimen/textSize_medium"
              android:inputType="textEmailAddress"
              android:hint="@string/auth.login"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/indent_medium"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="*"/>

      </RelativeLayout>

      <TextView
          android:id="@+id/errorLoginTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/TextError"
          android:text="@string/error.incorrect_login"
          android:visibility="gone"/>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/indent_small">

          <EditText
              android:id="@+id/passwordEditText"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="@dimen/textSize_medium"
              android:inputType="textPassword"
              android:hint="@string/auth.password"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/indent_medium"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="*"/>

      </RelativeLayout>

      <TextView
          android:id="@+id/errorPsw1TextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/TextError"
          android:text="@string/error.length_password"
          android:visibility="gone"/>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/indent_small">

          <EditText
              android:id="@+id/passwordConfirmEditText"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="@dimen/textSize_medium"
              android:inputType="textPassword"
              android:hint="@string/auth.confirm_password"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/indent_medium"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="*"/>

      </RelativeLayout>

      <TextView
          android:id="@+id/errorPsw2TextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/TextError"
          android:text="@string/error.length_password"
          android:visibility="gone"/>

      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/indent_small">

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_medium"
            android:inputType="textEmailAddress"
            android:hint="@string/auth.name"/>

      </android.support.design.widget.TextInputLayout>

      <TextView
          android:id="@+id/errorNameTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/TextError"
          android:text="@string/error.incorrect_name"
          android:visibility="gone"/>

      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/indent_small">

        <EditText
            android:id="@+id/surnameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_medium"
            android:inputType="textEmailAddress"
            android:hint="@string/auth.surname"/>

      </android.support.design.widget.TextInputLayout>

      <TextView
          android:id="@+id/errorSurnameTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/TextError"
          android:text="@string/error.incorrect_surname"
          android:visibility="gone"/>

      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/indent_small">

        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_medium"
            android:inputType="textEmailAddress"
            android:hint="@string/auth.phone"/>

      </android.support.design.widget.TextInputLayout>

      <TextView
          android:id="@+id/errorPhoneTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/TextError"
          android:text="@string/error.incorrect_phone"
          android:visibility="gone"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/textSize_normal"
          android:text="@string/auth.requered_fielsds"
          android:layout_marginLeft="@dimen/indent_small"
          android:layout_marginRight="@dimen/indent_small"
          android:paddingBottom="@dimen/indent_normal"/>

    </LinearLayout>

  </ScrollView>

  <Button
      android:id="@+id/registerButton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_marginTop="@dimen/indent_large"
      android:layout_marginBottom="@dimen/indent_normal"
      android:padding="@dimen/indent_small"
      android:background="@color/button.auth"
      android:textColor="@color/text.white"
      android:text="@string/button.sign_in"/>

</RelativeLayout>
