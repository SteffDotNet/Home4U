<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ru.bullyboo.view.CircleSeekBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:backgroundCircleLineWidth="7dp"
        app:backgroundCircleLineColor="@color/indicator.progress_background"
        app:progressCircleLineColor="@color/indicator.progress_foreground"
        app:progressCircleLineWidth="10dp"
        app:maxValue="100"
        app:value="50"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="50sp"
        android:text="50 %"/>
</RelativeLayout>